@model Client.ViewModels.Authentication.LoginVM
@{
	Layout = "_FreelanceLayout";
	ViewData["Title"] = "Login";
}

<!-- Titlebar
================================================== -->
<div id="titlebar" class="gradient">
	<div class="container">
		<div class="row">
			<div class="col-md-12">

				<h2>Log In</h2>

				<!-- Breadcrumbs -->
				<nav id="breadcrumbs" class="dark">
					<ul>
						<li><a href="/Home/Index">Home</a></li>
						<li>Log In</li>
					</ul>
				</nav>

			</div>
		</div>
	</div>
</div>

<!-- Page Content
================================================== -->
<div class="container">
	<div class="row">
		<div class="col-xl-5 offset-xl-3">


			<div class="login-register-page">
				<!-- Welcome Text -->
				<div class="welcome-text">
					<h3>We're glad to see you again!</h3>
					<span>Don't have an account? <a href="/Authentication/SignUp">Sign Up!</a></span>
				</div>

				<!-- Form -->
				<form method="post" id="login-form-page">
					<div class="input-with-icon-left">
						<i class="icon-material-baseline-mail-outline"></i>
						<input type="text" class="input-text with-border" name="Email" id="emailaddress-login" placeholder="Email Address"/>
						@Html.ValidationMessageFor(m => m.Email, null, new {@class = "error" })
						@Html.ValidationMessage("Email-format", null, new { @class = "error" })
					</div>

					<div class="input-with-icon-left">
						<i class="icon-material-outline-lock"></i>
						<input type="password" class="input-text with-border" name="Password" id="password-login" placeholder="Password"/>
						@Html.ValidationMessageFor(m => m.Password, null, new {@class = "error" })
					</div>
					<a href="#" class="forgot-password">Forgot Password?</a>
					
				</form>

				@Html.ValidationMessage("AuthenticationFailed", null, new { @class = "error" })
				<!-- Button -->
				<button class="button full-width button-sliding-icon ripple-effect margin-top-10" type="submit" form="login-form-page">Log In <i class="icon-material-outline-arrow-right-alt"></i></button>

				<!-- Social Login -->
				<div class="social-login-separator"><span>or</span></div>
				<div class="social-login-buttons">
					<button class="facebook-login ripple-effect"><i class="icon-brand-facebook-f"></i> Log In via Facebook</button>
					<button class="google-login ripple-effect"><i class="icon-brand-google-plus-g"></i> Log In via Google+</button>
				</div>
			</div>

		</div>
	</div>
</div>

<!-- Spacer -->
<div class="margin-top-70"></div>
<!-- Spacer / End-->
